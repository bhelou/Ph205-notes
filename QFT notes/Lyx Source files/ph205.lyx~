\begin_inset Formula 
\begin{equation}
\int_{0}^{T}\cos\frac{\pi kt}{T}\cos\frac{\pi lt}{T}dt=\int_{0}^{T}\sin\frac{\pi kt}{T}\sin\frac{\pi lt}{T}dt=\frac{T}{2}\delta_{kl}.
\end{equation}

\end_inset


\end_layout


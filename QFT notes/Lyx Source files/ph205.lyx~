\begin_inset ERT
status collapsed

\begin_layout Plain Layout


\backslash
centering
\end_layout

\end_inset


\begin_inset Graphics
	filename C:/Users/bassa_000/Documents/GitHub/Ph205-notes/QFT notes/WJ diagrams.svg

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption


status collapsed

\begin_layout Plain Layout
Problem 2.1
\end_layout

\begin_layout Plain Layout
We want to prove that 
\begin_inset Formula $\delta\omega_{\rho\sigma}=-\delta\omega_{\sigma\rho}$
\end_inset

.
\end_layout

\begin_layout Plain Layout
Our starting point is 
\begin_inset Formula 
\begin{equation}
g_{\mu\nu}\Lambda_{\rho}^{\mu}\Lambda_{\sigma}^{\nu}=g_{\rho\sigma}
\end{equation}

\end_inset

Using that 
\begin_inset Formula $\Lambda_{\nu}^{\mu}=\delta_{\nu}^{\mu}+\delta\omega_{\nu}^{\mu}$
\end_inset

, we obtain that
\begin_inset Formula 
\begin{equation}
g_{\mu\nu}\left(\delta_{\rho}^{\mu}+\delta\omega_{\rho}^{\mu}\right)\left(\delta_{\sigma}^{\nu}+\delta\omega_{\sigma}^{\nu}\right)=g_{\rho\sigma}.
\end{equation}

\end_inset

So
\begin_inset Formula 
\begin{eqnarray}
g_{\rho\sigma} & = & g_{\mu\nu}\delta_{\rho}^{\mu}\delta_{\sigma}^{\nu}+g_{\mu\nu}\delta\omega_{\rho}^{\mu}\delta_{\sigma}^{\nu}+g_{\mu\nu}\delta_{\rho}^{\mu}\delta\omega_{\sigma}^{\nu}+g_{\mu\nu}\delta\omega_{\rho}^{\mu}\delta\omega_{\sigma}^{\nu}\\
 & = & g_{\rho\sigma}+g_{\mu\sigma}\delta\omega_{\rho}^{\mu}+g_{\rho\nu}\delta\omega_{\sigma}^{\nu}+g_{\mu\nu}\delta\omega_{\rho}^{\mu}\delta\omega_{\sigma}^{\nu}\\
 & = & g_{\rho\sigma}+g_{\mu\sigma}g^{\mu a}\delta\omega_{a\rho}+g_{\rho\nu}g^{\nu b}\delta\omega_{b\sigma}+g_{\mu\nu}g^{\mu a}g^{\nu b}\delta\omega_{a\rho}\delta\omega_{b\sigma}\\
 & = & g_{\rho\sigma}+\delta_{\sigma}^{a}\delta\omega_{a\rho}+\delta_{\rho}^{b}\delta\omega_{b\sigma}+\delta_{v}^{a}g^{vb}\delta\omega_{a\rho}\delta\omega_{b\sigma}\\
 & = & g_{\rho\sigma}+\delta\omega_{\sigma\rho}+\delta\omega_{\rho\sigma}+g^{vb}\delta\omega_{\nu\rho}\delta\omega_{b\sigma}
\end{eqnarray}

\end_inset

Ignoring the last term because it is of second order in 
\begin_inset Formula $\delta\omega$
\end_inset

, then for the above equality to hold, we must have that 
\begin_inset Formula $\delta\omega_{\sigma\rho}+\delta\omega_{\rho\sigma}=0$
\end_inset

 and so that 
\begin_inset Formula $\delta\omega$
\end_inset

 is anti-symmetric.
\end_layout

\begin_layout Plain Layout
Problem 2.2 (Proving equation 2.14)
\end_layout

\begin_layout Plain Layout
Our starting point is that 
\begin_inset Formula $U\left(\Lambda\right)^{-1}U\left(\Lambda^{'}\right)U\left(\Lambda\right)=U\left(\Lambda^{-1}\Lambda^{'}\Lambda\right)$
\end_inset

.
 We will also make use of 
\begin_inset Formula 
\begin{equation}
\left(\Lambda^{-1}\right)_{\,\nu}^{\rho}=\Lambda_{\nu}^{\,\rho}.
\end{equation}

\end_inset


\end_layout

\begin_layout Plain Layout
Then,
\begin_inset Formula 
\begin{eqnarray}
\left(\Lambda^{-1}\Lambda^{'}\Lambda\right)_{ab} & = & \left(\Lambda^{-1}\right)_{a}^{\,\sigma}\left(\Lambda^{'}\right)_{\sigma\rho}\Lambda_{\, b}^{\rho}\\
 & = & \left(\Lambda\right)_{\, a}^{\sigma}\left(1+\delta\omega_{\sigma\rho}^{'}\right)\Lambda_{\, b}^{\rho}\\
 & = & \left(\underbrace{\Lambda_{\, a}^{\sigma}\delta_{\sigma\rho}\Lambda_{\, b}^{\rho}}+\delta\omega_{\sigma\rho}^{'}\Lambda_{\, a}^{\sigma}\Lambda_{\, b}^{\rho}\right)\\
 & = & \Lambda_{\, a}^{\sigma}\Lambda_{\sigma b}+\delta\omega_{\sigma\rho}^{'}\Lambda_{\, a}^{\sigma}\Lambda_{\, b}^{\rho}\\
 & = & \left(\Lambda^{-1}\right)_{a}^{\,\sigma}\Lambda_{\sigma b}+\delta\omega_{\sigma\rho}^{'}\Lambda_{\, a}^{\sigma}\Lambda_{\, b}^{\rho}\\
 & = & \delta_{ab}+\delta\omega_{\sigma\rho}^{'}\Lambda_{\, a}^{\sigma}\Lambda_{\, b}^{\rho}
\end{eqnarray}

\end_inset

Hence, 
\begin_inset Formula 
\begin{eqnarray}
U\left(\Lambda^{-1}\Lambda^{'}\Lambda\right) & = & I+\frac{i}{2\hbar}\left(\delta\omega_{\sigma\rho}^{'}\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}\right)M^{\mu\nu}\\
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Plain Layout
On the other hand, 
\begin_inset Formula 
\begin{eqnarray}
U\left(\Lambda\right)^{-1}U\left(\Lambda^{'}\right)U\left(\Lambda\right) & = & U\left(\Lambda\right)^{-1}\left(I+\frac{i}{2\hbar}\delta\omega_{\mu\nu}^{'}M^{\mu\nu}\right)U\left(\Lambda\right)\\
 & = & I+\frac{i}{2\hbar}\delta\omega_{\mu\nu}^{'}U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right)\\
\end{eqnarray}

\end_inset

Hence, 
\begin_inset Formula 
\begin{equation}
I+\frac{i}{2\hbar}\left(\delta\omega_{\sigma\rho}^{'}\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}\right)M^{\mu\nu}=I+\frac{i}{2\hbar}\delta\omega_{\mu\nu}^{'}U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right),
\end{equation}

\end_inset

which implies that
\begin_inset Formula 
\begin{eqnarray}
\delta\omega_{\sigma\rho}^{'}\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}M^{\mu\nu} & = & \delta\omega_{\mu\nu}^{'}U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right)\\
 & = & \delta\omega_{\mu\nu}^{'}\Lambda_{\,\rho}^{\mu}\Lambda_{\,\sigma}^{\nu}M^{\rho\sigma}.
\end{eqnarray}

\end_inset

(?)Eliminating 
\begin_inset Formula $\delta\omega_{\mu\nu}$
\end_inset

 from both sides we obtain the desired equality that(?)
\begin_inset Formula 
\begin{equation}
\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}M^{\mu\nu}=U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right).
\end{equation}

\end_inset


\end_layout

\begin_layout Plain Layout

\emph on
Problem
\emph default
 2.3 (Verify that equation 2.16 follows from 2.14)
\end_layout

\begin_layout Plain Layout
We have that 
\begin_inset Formula 
\begin{equation}
\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}M^{\mu\nu}=U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right).
\end{equation}

\end_inset

Now, 
\begin_inset Formula 
\begin{eqnarray}
\Lambda_{\,\mu}^{\sigma}\Lambda_{\,\nu}^{\rho}M^{\mu\nu} & = & \left(1+\delta\omega_{\,\mu}^{\sigma}\right)\left(1+\delta\omega_{\,\nu}^{\rho}\right)M^{\mu\nu}\\
 & = & \left(1+\delta\omega_{\,\mu}^{\sigma}\delta_{\,\nu}^{\rho}+\delta_{\,\mu}^{\sigma}\delta\omega_{\,\nu}^{\rho}\right)M^{\mu\nu}+O\left(\delta\omega^{2}\right)\\
 & = & M^{\mu\nu}+\delta\omega_{\,\mu}^{\sigma}M^{\mu\rho}+\delta\omega_{\,\nu}^{\rho}M^{\sigma\nu}
\end{eqnarray}

\end_inset

In addition, noting that 
\begin_inset Formula 
\begin{equation}
U\left(\Lambda^{-1}\right)=U\left(\Lambda\right)^{-1}
\end{equation}

\end_inset

because 
\begin_inset Formula 
\begin{equation}
U\left(\Lambda^{-1}\right)U\left(\Lambda\right)=U\left(\Lambda^{-1}\Lambda\right)=U\left(I\right)=I,
\end{equation}

\end_inset

we have that
\begin_inset Formula 
\begin{eqnarray}
U\left(\Lambda\right)^{-1}M^{\mu\nu}U\left(\Lambda\right) & = & U\left(\Lambda^{-1}\right)M^{\mu\nu}U\left(\Lambda\right)=U\left(\Lambda^{T}\right)M^{\mu\nu}U\left(\Lambda\right)\\
 & = & \left(I+\frac{i}{2\hbar}\delta\omega_{\alpha\beta}^{T}M^{\alpha\beta}\right)M^{\mu\nu}\left(I+\frac{i}{2\hbar}\delta\omega_{\gamma\eta}M^{\gamma\eta}\right)\\
 & = & \left(I-\frac{i}{2\hbar}\delta\omega_{\alpha\beta}M^{\alpha\beta}\right)M^{\mu\nu}\left(I+\frac{i}{2\hbar}\delta\omega_{\gamma\eta}M^{\gamma\eta}\right)\\
 & = & \left(I+\frac{i}{2\hbar}\delta\omega_{\alpha\beta}M^{\alpha\beta}-\frac{i}{2\hbar}\delta\omega_{\gamma\eta}M^{\gamma\eta}+\frac{1}{4\hbar^{2}}\delta\omega_{\alpha\beta}\delta_{\gamma\eta}M^{\alpha\beta}M^{\gamma\eta}\right)M^{\mu\nu}\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\alpha\beta}\left(M^{\mu\nu}M^{\alpha\beta}-M^{\alpha\beta}M^{\mu\nu}\right)+O\left(\delta\omega^{2}\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\alpha\beta}\left[M^{\mu\nu},M^{\alpha\beta}\right]+O\left(\delta\omega^{2}\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\rho\sigma}\left[M^{\mu\nu},M^{\rho\sigma}\right].
\end{eqnarray}

\end_inset

This should be equal to, letting 
\begin_inset Formula $\xi\equiv M^{\mu\nu}+\delta\omega_{\,\mu}^{\sigma}M^{\mu\rho}+\delta\omega_{\,\nu}^{\rho}M^{\sigma\nu}$
\end_inset

 
\begin_inset Formula 
\begin{eqnarray}
\xi & = & M^{\mu\nu}+g^{\nu\sigma}\delta\omega_{\nu\mu}M^{\mu\rho}+g^{\mu\rho}\delta\omega_{\mu\nu}M^{\sigma\nu}\\
 & = & M^{\mu\nu}+g^{\nu\sigma}\delta\omega_{\nu\mu}M^{\mu\rho}-g^{\mu\rho}\delta\omega_{\nu\mu}M^{\sigma\nu}\\
 & = & M^{\mu\nu}+\delta\omega_{\nu\mu}\left(g^{\nu\sigma}M^{\mu\rho}-g^{\mu\rho}M^{\sigma\nu}\right)\\
 & = & M^{\mu\nu}+\delta\omega_{\sigma\rho}\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\sigma\rho}\left(2i\hbar\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}\right)\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\sigma\rho}\left(i\hbar\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}\right)\right)+\frac{i}{2\hbar}\delta\omega_{\sigma\rho}\left(\hbar\left(g^{\rho\mu}M^{\sigma\nu}-g^{\sigma\nu}M^{\rho\sigma}\right)\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\sigma\rho}\left(i\hbar\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}\right)\right)-\frac{i}{2\hbar}\delta\omega_{\rho\sigma}\left(i\hbar\left(g^{\rho\mu}M^{\sigma\nu}-g^{\sigma\nu}M^{\rho\sigma}\right)\right)\\
 & = & M^{\mu\nu}+\frac{i}{2\hbar}\delta\omega_{\sigma\rho}\left(i\hbar\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}-g^{\rho\mu}M^{\sigma\nu}+g^{\sigma\nu}M^{\rho\sigma}\right)\right)
\end{eqnarray}

\end_inset

where we used that 
\begin_inset Formula $M^{\alpha\beta}$
\end_inset

 is antisymmetric.
 
\end_layout

\begin_layout Plain Layout
Combining the results, we obtain that
\begin_inset Formula 
\begin{equation}
\left[M^{\mu\nu},M^{\rho\sigma}\right]=i\hbar\left(g^{\sigma\mu}M^{\rho\nu}-g^{\rho\nu}M^{\mu\sigma}-g^{\rho\mu}M^{\sigma\nu}+g^{\sigma\nu}M^{\rho\sigma}\right).
\end{equation}

\end_inset


\end_layout

\end_inset


\end_layout

